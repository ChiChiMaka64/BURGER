
<div class="jumbotron">
  <img src="/assets/images/burger.jpg" alt="burger">
  <h1>EAT! THAT! BURGER!</h1>
  <input class="form-control form-control-lg" type="text" placeholder="BURGER">
  <button type="button" class="btn btn-success">Submit</button>
  <h2>Enter the burger you want to eat. Click the submit button when finished.</h2>
</div>

<h2>Not Eaten</h2>

<ul>
  {{#each burgers}} 
  {{#unless devoured}}
  <button class="change-devour" data-id="{{id}}" data-newDevour="{{devoured}}">{{}}</button>{{/unless}} {{/each}}
</ul>

<h2>Eaten</h2>

<ul>
  {{#each burgers}} {{#if devoured}} <button class="change-devour" data-id="{{id}}" data-newDevour="{{devoured}}">{{}}</button> 
  {{/if}} {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger-input" name="burger-name">
  </div>

  <div class="form-group">
    <label for="eaten">Want to eat it?</label>
    <br>
    <input type="radio" name="devoured" value="1"> Devour it!
    <br>
    <input type="radio" name="uneaten" value="0"> Don't Eat It!
  </div>

  <button type="submit">Add Burger</button>
</form>
